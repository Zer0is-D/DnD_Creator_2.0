<Window x:Class="DnD_Creator_2._0.ItemAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_Creator_2._0"
        mc:Ignorable="d"
        Icon="\Img1\icon.ico"
        Title="Добавить предмет" Height="350" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Margin="5">
            <ListView x:Name="itemList"/>
        </ScrollViewer>

        <StackPanel Grid.Column="1">
            <Button Height="50" Content="Добавить" Margin="10" Click="Add_btn"/>
            <Button Height="50" Content="Назад" Margin="10" Click="Back_btn"/>
        </StackPanel>
    </Grid>
</Window>
