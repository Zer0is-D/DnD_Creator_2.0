<UserControl x:Class="DnD_Creator_2._0.Controls.PackSpells"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnD_Creator_2._0.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="0.15*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="spellName" FontSize="12" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name="spellLvl" Grid.Column="1" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Grid.Column="2" Content="..." FontSize="20" Background="Silver" Opacity="0.7" Margin="5" Click="More_btn"/>
        <Button x:Name="delete_btn" Grid.Column="3" Content="X" FontSize="18" Background="Red" Opacity="0.7" Margin="5" Click="DelThisItem_btn"/>
    </Grid>
</UserControl>
